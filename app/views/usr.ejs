<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Cadastro</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="./css/allsw.css">
  <link rel="stylesheet" type="text/css" href="./css/w3.css">
</head>
<body>

  <% if (req.query.act != 'INC') { %>

    <div class="w3-container container-margin1 container-top3">
      <div>
        <button class="w3-button w3-red" type="button" style="margin-bottom: 5px;" onclick="location.href='/?act=INC'">Incluir</button>
      </div>
      <table class="w3-table-all">
        <thead>
          <tr class="w3-red">
            <th>Código</th>
            <th>Nome</th>
          </tr>
        </thead>
        <tbody>
          <% for (var x in dados) { %>
            <tr>
              <td><%= dados[x].USR_ID %></td>
              <td><%= dados[x].USR_NOME %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  <% } else { %>

    <div class="w3-container container-margin1 container-top3">
      
      <form method="post">
        <input type="hidden" name="act" value="GRI">
        <input type="text" name="nusr" placeholder="Nome de usuário">
        
        <button class="w3-button w3-red" type="submit">Salvar</button>
      </form>

    </div>

  <% } %>

</body>
</html>